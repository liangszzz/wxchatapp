<!--pages/sign/sign.wxml-->
<view class="header">
  添加您的银行卡用于收款
</view>
<view class='table'>
  <view class='tr'>
    <view class='td-name'>持卡人</view>
    <view class='td-value'>沈海强</view>
  </view>
  <view class='tr'>
    <view class='td-name'>身份证号</view>
    <view class='td-value'>32046454654644748456</view>
  </view>
  <view class='tr'>
    <view class='td-name'>签约银行</view>
    <view class='td-value'>工商银行</view>
  </view>
  <view class='tr'>
    <view class='td-name'>卡号</view>
    <view class='td-value'>44135135784541654</view>
  </view>
  <view class='tr'>
    <view class='td-name'>手机号</view>
    <view class='td-value'>
      <input class="invitation" value='{{phoneNum}}' bindinput="phoneInput" maxlength='11' />
    </view>
  </view>
</view>

<view class='code'>
  <view class="textcode">短信验证码</view>
  <view class="inputcode">
    <input class="invitation" placeholder="请输入验证码" placeholder-class="placeholder-class" />
  </view>
  <view class='line'></view>
  <view class='getcode' bindtap='getcode'>获取验证码</view>
</view>

<view class='agreement'>
  <checkbox value="12" checked="" class='check' />
  <view>我已阅读并理解</view>
  <view bindtap='agreement' style='color: rgba(3, 169, 244, 1);'>《自动还款协议》</view>

</view>

<button class='btn' bindtap='back'>确认</button>