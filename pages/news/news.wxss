/* pages/news/news.wxss */

page {
  height: 100%;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 30rpx;
  height: 15%;
  border-bottom: 1px solid #e8e8e8;
}

.row image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin: 20rpx;
}

.content {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-left: 20rpx;
  line-height: 20px;
  color: rgba(94, 94, 94, 1);
  font-size: 14px;
  text-align: left;
  font-family: Arial;
}

.top, .bottom {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.content {
  padding: 10rpx;
  font-size: 26rpx;
  color: #b2b2b2;
}

/*消息内容*/

.sentence {
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 15px;
  color: rgba(94, 94, 94, 1);
  font-size: 10px;
  text-align: left;
  font-family: Arial;
}
