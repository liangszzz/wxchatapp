page {
  background-color: #f2f2f2;
  height: 100%;
}

.profile-warn {
  height: 60rpx;
  color: #8c8891;
  font-size: 12px;
  font-family: PingFangSC-regular;
  line-height: 60rpx;
}

.profile {
  background-color: #fff;
  padding: 0 40rpx;
  
}

.profile view:last-child {
  border-bottom: 0;
}

/*身份证*/

.profile-id {
  height: 310rpx;
  border-bottom: 3rpx solid #c2c2c2;
  position: relative;
}

.profile-id image {
  width: 280rpx;
  height: 181rpx;
  border: 2rpx dashed gray;
  border-radius: 12rpx;
}

.profile-id image:first-child {
  position: absolute;
  top: 94rpx;
  right: 384rpx;
}

.profile-id image:last-child {
  position: absolute;
  top: 94rpx;
  right: 35rpx;
}

.profile-id text {
  color: #a7a7a7;
  font-size: 14px;
  line-height: 4.0;
}

/*个人信息*/

.profile-info {
  height: 339rpx;
  border-bottom: 3rpx solid #c2c2c2;
  font-size: 14px;
  line-height: 2.3;
  display: flex;
  flex-direction: row;
  margin: 30rpx 0rpx;
}

.profile-info-left {
  color: #a7a7a7;
  display: flex;
  flex-direction: column;
}

.profile-info-right {
  color: rgba(16, 16, 16, 1);
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}


/*车辆情况*/
.profile-car {
  width: 100%;
  border-bottom: 3rpx solid #c2c2c2;
  background-color: #fff;
 
}

.profile-car-text {
  background-color: #fff;
  float:left;
  width: 100%;
  color: #a7a7a7;
  font-size: 14px;
}

.profile-car-nav {
  float: left;
  background-color: #fff;
}

.profile-car-detail {
  float: left;
  margin: 20rpx 51rpx 20rpx 10rpx;
}

.profile-car-detail image {
  width: 270rpx;
  height: 180rpx;
  border: 2rpx dashed gray;
  border-radius: 12rpx;
}

.profile-car-info {
  /*为了使下面的浮动掉下去*/
  width: 100%;
  height: 211rpx;
  font-size: 14px;
  line-height: 2.3;
  display: flex;
  flex-direction: row;
  background-color: #fff;
}

.profile-car-info-left {
  color: #a7a7a7;
  display: flex;
  flex-direction: column;
}

.profile-car-info-right {
  color: rgba(16, 16, 16, 1);
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
}

/*已确认阅读*/
.profile-confrim{
  font-size: 12px;
}
.profile-button{
  width: 700rpx;
  margin-top: 40rpx;
  background-color: #03a9f4;
  font-size: 18px;
  color: #ffffff;
}

.agreement {
  left: 7px;
  top: 710px;
  width: 100%;
  height: 29px;
  font-size: 12px;
  text-align: center;
  font-family: Arial-regular;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check {
  transform: scale(0.7, 0.7);
  color: rgba(3, 169, 244, 1);
}