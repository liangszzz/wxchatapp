/* pages/user/user.wxss */

page {
  height: 100%;
  background-color: rgba(242, 242, 242, 1);
}

.top {
  width: 100%;
  height: 25%;
  line-height: 20px;
  border-radius: 0px;
  background-color: rgba(3, 169, 244, 1);
  color: rgba(255, 255, 255, 1);
  font-size: 14px;
  text-align: center;
  font-family: Arial;
  display: flex;
  flex-flow: row;
}

.header {
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.header-img {
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.header-left {
  width: 50%;
  margin-top: 13%;
  text-align: left;
  line-height: 23px;
  opacity: 0.99;
  color: rgba(255, 255, 255, 1);
  font-size: 16px;
  font-family: Arial;
}

.phone {
  line-height: 20px;
  opacity: 0.99;
  color: rgba(255, 255, 255, 1);
  font-size: 14px;
  text-align: left;
  font-family: Arial;
}

.personal {
  margin-top: 2%;
  background-color: #fff;
  padding: 0rpx 20rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 40%;
}

.item-image {
  margin-left: 10rpx;
  width: 10%;
  height: 100%;
}
.image {
  margin-top: 54%;
  width: 50rpx;
  height: 50rpx;
}

.item-text {
  height: 100%;
  color: gray;
  font-size: 35rpx;
  
}

.texts {
  color: gray;
  font-size: 35rpx;
  margin-top: 32%;
}

.personal-item {
  height: 33%;
  line-height: 20px;
  box-shadow: 0px 5px 2px 0px rgba(194, 194, 194, 0.24);
  display: flex;
  flex-flow: row;
}

.buttom {
  margin-top: 15%;
  width: 100%;
  height: 10%;
  display: flex;
  flex-flow: row;
  justify-content: center;
  background-color: #fff;
}

.item-text view{
    position:relative;
}

.item-text view:after{
    content:'';
    height:10px;
    width:10px;
    display:block;
    border:1px solid #ccc;
    border-left-width:0;
    border-bottom-width:0;
    position:absolute;
    top:10px;
    right:6px;
    -webkit-transform:rotate(45deg);
       -moz-transform:rotate(45deg);
            transform:rotate(45deg);
}