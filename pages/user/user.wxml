<view class="mine-nav">
  <image src="{{userInfo.avatarUrl}}" mode='aspectFill'></image>
  <view class="mine-info">
    <text>{{userInfo.nickName}}</text>
    <text>{{userInfo.phone}}</text>
  </view>
</view>

<view class='mine-item'>
  <view class="mine-item-col" bindtap='toMessage'>
    <image src='/assets/images/message.png' mode='aspectFill'></image>
    <text>我的消息</text>
    <image src='/assets/images/arrow.png' mode='aspectFill'></image>
  </view>
  <view class="mine-item-col" bindtap='toBankCard'>
    <image src='/assets/images/bank.png' mode='aspectFill'></image>
    <text>我的银行卡</text>
    <image src='/assets/images/arrow.png' mode='aspectFill'></image>
  </view>
  <view class="mine-item-col" bindtap='toUpdatelog'>
    <image src='/assets/images/update.png' mode='aspectFill'></image>
    <text>更新日志</text>
    <image src='/assets/images/arrow.png' mode='aspectFill'></image>
  </view>
</view>

 <view class="mine-item-quit" bindtap='logout'>
    <image src='/assets/images/quit.png' mode='aspectFill'></image>
    <text>安全退出</text>
  </view>