/* pages/infodetail/detail.wxss */

page {
  height: 100%;
  background-color: rgba(242, 242, 242, 1);
}

.header {
  margin: auto;
  width: 100%;
  height: 20%;
  line-height: 20px;
  display: flex;
  flex-direction: row;
  background-color: white;
}

.clock {
  width: 100%;
  height: 100%;
}

.header-left {
  width: 70%;
}

.title {
  margin-top: 8%;
  color: rgba(16, 16, 16, 1);
  font-size: 18px;
  text-align: left;
  font-family: Helvetica-regular;
}

.content {
  margin-top: 10px;
  color: rgba(136, 136, 136, 1);
  font-size: 12px;
  text-align: left;
  font-family: PingFangSC-regular;
}

.body {
  margin-top: 30px;
  height: 40%;
  line-height: 20px;
  text-align: center;
  background-color: white;
}

.tr {
  display: flex;
  width: 100%;
  height: 35px;
}

.td-name {
  margin-left: 10%;
  margin-top: 8%;
  width: 63px;
  height: 23px;
  color: rgba(136, 136, 136, 1);
  font-size: 12px;
  text-align: left;
  font-family: Arial;
}

.td-value {
  margin-left: 4%;
  margin-top: 8%;
  width: 163px;
  height: 23px;
  color: rgba(136, 136, 136, 1);
  font-size: 12px;
  text-align: left;
  font-family: Arial;
}

.info-title {
  height: 15%;
  margin-left: 5%;
  text-align: left;
  line-height: 20px;
  color: rgba(16, 16, 16, 1);
  font-size: 14px;
  font-family: Arial;
  display: flex;
  align-items: center;
  justify-content: left;
}

/* 分格线 */

.separated {
  margin: auto;
  width: 90%;
  height: 1px;
  border: 1px solid rgba(234, 234, 234, 1);
}

.btn {
  background-color: rgba(3, 169, 244, 1);
  margin-top: 40px;
  width: 90%;
  height: 47px;
  border-radius: 4px;
  color: rgba(255, 255, 255, 1);
  font-size: 18px;
  text-align: center;
  font-family: Microsoft Yahei;
}
